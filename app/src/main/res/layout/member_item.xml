<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="12dp" android:background="@android:color/white">
    <!--  Member Name  -->
    <TextView android:id="@+id/memberName" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Name: " android:textSize="18sp" android:textStyle="bold" android:fontFamily="sans-serif-medium" android:textColor="#000" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@id/btnDelete" app:layout_constraintHorizontal_bias="0.0"/>
    <!--  Delete Button  -->
    <Button android:id="@+id/btnDelete" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Delete" android:textSize="14sp" android:fontFamily="sans-serif-medium" android:backgroundTint="@android:color/holo_red_light" android:textColor="@android:color/white" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <!--  Phone Number  -->
    <TextView android:id="@+id/memberPhone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Phone: " android:textSize="16sp" android:fontFamily="sans-serif" android:textColor="#333" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/memberName" app:layout_constraintEnd_toEndOf="parent"/>
    <!--  Joining Date  -->
    <TextView android:id="@+id/memberJoiningDate" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Joining Date: " android:textSize="16sp" android:fontFamily="sans-serif" android:textColor="#333" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/memberPhone" app:layout_constraintEnd_toEndOf="parent"/>
    <!--  Subscription Plan  -->
    <TextView android:id="@+id/memberSubscription" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Subscription: " android:textSize="16sp" android:fontFamily="sans-serif" android:textColor="#333" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/memberJoiningDate" app:layout_constraintEnd_toEndOf="parent"/>
    <!--  Subscription End Date  -->
    <TextView android:id="@+id/enddate" android:layout_width="0dp" android:layout_height="wrap_content" android:fontFamily="sans-serif" android:text="End Date: " android:textColor="@color/black" android:textSize="16sp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/memberSubscription"/>
</androidx.constraintlayout.widget.ConstraintLayout>